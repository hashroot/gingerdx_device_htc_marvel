<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <ImageView android:id="@+id/appIcon" android:background="@drawable/status_bar_latest_event_panel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="center" />       
        <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:paddingLeft="10.0dip" android:paddingRight="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textAppearance="@android:style/TextAppearance.StatusBar.EventContent.Title" android:ellipsize="marquee" android:id="@+id/title" android:fadingEdge="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:singleLine="true" />
            <TextView android:textAppearance="@android:style/TextAppearance.StatusBar.EventContent.Title" android:ellipsize="marquee" android:id="@+id/description" android:fadingEdge="horizontal" android:layout_width="fill_parent" android:layout_height="0.0dip" android:singleLine="true" />
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">	    
                 <TextView android:textAppearance="@android:style/TextAppearance.StatusBar.EventContent" android:layout_gravity="center" android:gravity="left|center" android:ellipsize="marquee" android:id="@+id/progress_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="0.0" />
                <ProgressBar android:id="@+id/progress_bar" android:layout_gravity="center" android:layout_marginLeft="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" style="?android:attr/progressBarStyleHorizontal" android:layout_weight="1.0"/>                
            </LinearLayout>
            <TextView android:id="@+id/paused_text" android:layout_width="fill_parent" android:layout_height="wrap_content" android:singleLine="true" android:layout_alignParentBottom="true" style="@android:style/TextAppearance.StatusBar.EventContent" />
        </LinearLayout>	
    </LinearLayout>	
    <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@android:drawable/divider_horizontal_bright" />
</LinearLayout>
